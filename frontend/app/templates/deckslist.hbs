<table class="table table-striped km-deck-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Deck Type</th>
      <th>Common</th>
      <th>Rare</th>
      <th>Epic</th>
      <th>Legendary</th>
      <th>Total</th>
      <th>Dust Cost</th>
      <th>Dust Needed</th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredDecks as |deck|}}
      {{deck-preview cards=deck.cards deck=deck cardDecks=deck.cardDecks session=session}}
    {{/each}}
  </tbody>
</table>
